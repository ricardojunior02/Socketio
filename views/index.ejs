<!DOCTYPE html>
<html lang="en">
<head>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Roboto';
    }

    body {
      display: flex;
      justify-content: center;
      flex-direction: column;

      padding: 40px 40px;
    }

    #chat-box {
      min-height: 400px;
      min-width: 100%;
      max-height: 400px;
      max-width: 100%;
      background-color: #252232;
      margin: 10px auto;
      border-radius: 5px;

      overflow-y: scroll;
    }

    #chat-box p {
      color: #f0f0f0f0;
      margin-left: 15px;
    }

    #chat-box::-webkit-scrollbar {
      width: 9px;
      background: #252232;
      border-top-right-radius: 5px;
      border-bottom-right-radius: 5px;

    }

    #chat-box::-webkit-scrollbar-thumb {
      background: #333;
      border-top-right-radius: 5px;
      border-bottom-right-radius: 5px;
    }

      
  </style>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
  <title>Socket io</title>
</head>
<body>
  <div class="container">
    <h1>Chat.Io</h1>
  <div id="chat-box" class="">
  </div>
  <input type="text" name="msg" id="msg" placeholder="Mensagem..." class="form-control"><br>
  <input type="text" name="username" id="username" placeholder="Seu nome de usuÃ¡rio" class="form-control"><br>

  <button onclick="sendMessage()" class="btn btn-primary block-btn">Enviar</button>
  </div>
  
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.0.4/socket.io.js"></script>
<script>
  const socket = io('http://localhost:3000');

  socket.on('showmsg', (data) => {
    const chat = document.getElementById('chat-box');

    const p = document.createElement('p');

    p.innerHTML = data.userName + ':' + data.message;
    chat.append(p);
  })

  function sendMessage(){
    const msgField = document.getElementById('msg');
    const usernameField = document.getElementById('username');

    const msg = msgField.value;
    const username = usernameField.value;

    socket.emit('msg', {
      message: msg,
      userName: username
    });

  }
</script>
</html>